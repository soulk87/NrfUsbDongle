/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "nicenanov2-pinctrl.dtsi"

/ {
	model = "Custom Board auto generated by nRF Connect for VS Code";
	compatible = "hkh,nicenanov2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &app_partition;
		zephyr,usb-device = &usbd;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
			label = "Green LED 0";
		};
		led1: led_1 {
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
			label = "Green LED 1";
		};
		led2: led_2 {
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
			label = "Green LED 2";
		};
		led3: led_3 {
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
			label = "Green LED 3";
		};
	};
	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 17 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
			zephyr,code = <INPUT_KEY_0>;
		};
		button1: button_1 {
			gpios = <&gpio0 20 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 1";
			zephyr,code = <INPUT_KEY_1>;
		};
		button2: button_2 {
			gpios = <&gpio0 22 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 2";
			zephyr,code = <INPUT_KEY_2>;
		};
	};

	
	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		// pwm-led0 = &pwm_led0;
		sw0 = &button0;
		sw1 = &button1;
		sw2 = &button2;
		bootloader-led0 = &led0;
		mcuboot-button0 = &button0;
		mcuboot-led0 = &led0;
		watchdog0 = &wdt0;
	};
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        app_partition: partition@0 {
            label = "application";
            reg = <0x00000000 0x000D3000>; /* 0xE3000 - 0x1000 = 926KB */
        };

        storage_partition: partition@d3000 {
            label = "storage";
            reg = <0x000D3000 0x00010000>; /* 64KB, BLE 데이터 저장용 */
        };

        dfu_data_partition: partition@e3000 {
            label = "dfu-data";
            reg = <0x000E3000 0x0000A000>; /* 40KB, 예약 */
        };

        bootloader_partition: partition@f4000 {
            label = "bootloader";
            reg = <0x000F4000 0x0000A000>; /* 38KB + 2KB */
        };

        mbr_params_partition: partition@fe000 {
            label = "mbr-params";
            reg = <0x000FE000 0x00001000>; /* 4KB */
        };

        bootloader_settings_partition: partition@ff000 {
            label = "bootloader-settings";
            reg = <0x000FF000 0x00001000>; /* 4KB */
        };
    };
};



&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&usbd {
    status = "okay";


	cdc_acm_uart0: cdc_acm_uart0{
		compatible = "zephyr,cdc-acm-uart";
		label = "CDC_ACM_UART_0";
	};
};

